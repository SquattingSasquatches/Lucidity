<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.squattingsasquatches.lucidity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <permission
        android:name="com.squattingsasquatches.lucidity.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.squattingsasquatches.lucidity.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:debuggable="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/LucidityTheme" >
        <activity
            android:label="@string/app_name"
            android:name=".activities.SplashActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".PHPService" />

        <activity android:name=".activities.CourseMenuActivity" >
        </activity>

        <receiver
            android:name=".C2DMReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter >
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.squattingsasquatches.lucidity" />
            </intent-filter>
            <intent-filter >
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.squattingsasquatches.lucidity" />
            </intent-filter>
        </receiver>
        <receiver android:name=".QuizBegin" >
            <intent-filter >
                <action android:name="com.squattingsasquatches.lucidity.QUIZ_BEGIN" />

                <category android:name="com.squattingsasquatches.lucidity" />
            </intent-filter>
        </receiver>

        <activity android:name=".activities.SelectSubjectActivity" >
        </activity>
        <activity android:name=".activities.SelectCourseActivity" >
        </activity>
        <activity android:name=".activities.SelectSectionActivity" >
        </activity>
        <activity android:name=".activities.CourseHomeActivity" >
        </activity>
        <activity android:name=".activities.CourseMenuActivity" >
        </activity>
        <activity android:name=".activities.QuizActivity" >
        </activity>
        <activity android:name=".activities.SettingsScreen" >
        </activity>
        <activity android:name=".activities.ViewAssignmentActivity" >
        </activity>
    </application>

</manifest>